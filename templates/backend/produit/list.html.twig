{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des produits
	{{ parent() }}
{% endblock %}

{% block body %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-success" role="alert">
			{{ message }}
		</div>
	{% endfor %}
		<div class="card w-75 mx-auto p-5 mt-5">
			<h1 class="text-center">Liste des produits</h1>
			<table class="table table-striped align-middle">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">Nom</th>
						<th scope="col">Catégorie</th>
						<th scope="col">Prix</th>						
						<th scope="col">Producteur</th>
						<th scope="col">Image</th>
						<th scope="col">Created At</th>
						<th scope="col">Updated At</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for produit in produits %}
						<tr>
							<th scope="row">{{ produit.id }}</th>
							<td>{{ produit.nom }}</td>
							<td>{{ produit.categorie.nom }}</td>
							<td>{{ produit.prix}} € /kg</td>
							<td>{{ produit.producteur.nom }}</td>
							<td><img src="http://127.0.0.1:8000/images/produits/{{ produit.imageName }}" alt="{{ produit.nom }}" class="image"></td>
							<td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
							<div class="d-flex justify-content-around">	
								<a href="{{ path('app_admin.produit.edit', {'id': produit.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square color-light"></i></a>
								{{ include('backend/produit/_delete_form.html.twig') }}
							</div>	
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a href="{{ path('app_admin') }}" class="text-center"><button type="submit" class="btn btn-color">Retour au panneau d'administration</button><a>
		</div>
		{% endblock %}
