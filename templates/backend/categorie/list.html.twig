{% extends './layout/base.html.twig' %}

{% block title %}
	Liste des catégories
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="card w-50 mx-auto p-3 mt-5">
		<h1 class="text-center">Liste des catégories</h1>
		<table class="table table-striped align-middle">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Nom</th>
					<th scope="col">Image</th>
					<th scope="col">Created At</th>
					<th scope="col">Updated At</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<th scope="row">{{ categorie.id }}</th>
							<td>{{ categorie.nom }}</td>
							<td><img src="http://127.0.0.1:8000/images/categories/{{ categorie.imageName }}" alt="{{ categorie.nom }}" class="image"></td>
							<td>{{ categorie.createdAt ? categorie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
							<div class="d-flex justify-content-around">	
								<a href="{{ path('app_admin.categorie.edit', {'id': categorie.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square color-light"></i></a>
								{{ include('backend/categorie/_delete_form.html.twig') }}
							</div>
							</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('app_admin') }}" class="text-center"><button type="submit" class="btn btn-color">Retour au panneau d'administration</button><a>
	</div>	
{% endblock %}
